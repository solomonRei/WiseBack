			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Successful POST request\", function () {\r",
							"    pm.expect(pm.response.code).to.be.oneOf([201, 202]);\r",
							"    \r",
							"    if (pm.response.code === 201 || pm.response.code === 202) {\r",
							"        var responseBody = pm.response.json();\r",
							"\r",
							"        pm.collectionVariables.set(\"access_token\", responseBody.accessToken);\r",
							"        pm.collectionVariables.set(\"refresh_token\", responseBody.refreshToken);\r",
							"    }\r",
							"});\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"googleIdToken\": \"{{googleIdToken}}\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
